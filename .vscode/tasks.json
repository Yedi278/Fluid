{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++ for SDL2",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}",
                "Engine.cpp",
                "ObjectList.cpp",
                "GameObject.cpp",
                "Vector2.cpp",
                "Physics.cpp",
                "-lSDL2main",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}